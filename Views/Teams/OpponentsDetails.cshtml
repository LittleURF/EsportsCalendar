@model IEnumerable<EsportsCalendar.Models.Team>

@{
    ViewData["Title"] = "OpponentsDetails";
}
<br />
<div class="row d-flex justify-content-center">
    <h1 class="text-center w-100 text-light">Teams Details</h1>
</div>
<br />

<div class="row d-flex justify-content-center align-items-center">

    @foreach (var team in Model)
    {
        <div class="col-sm-12 col-lg-5">
            <partial model="team" name="_TeamDetailsPartialView" />
        </div>
        @if (Model.First() == team)
        {
            <div class="col-1">
                <span class="text-light" style="font-size: 60px;">VS</span>
            </div>
        }
    }
</div>
<br />
<div class="row d-flex justify-content-center">
    <a asp-action="Index" asp-controller="Home" class="btn btn-info" style="width: 150px;">Back</a>
</div>

