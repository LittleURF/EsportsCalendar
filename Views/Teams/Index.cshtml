@model IEnumerable<EsportsCalendar.Models.Team>

@{
    ViewData["Title"] = "Index";
}
<br />
<div class="row d-flex justify-content-center">
    <h1 class="text-center w-100">Teams</h1>
    <p class="text-center">Here you can find details about the most popular teams and check when do they play!</p>
</div>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CurrentVideogame.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
        <tr>
            <td>
                @if (team.CurrentVideogame.Name == "LoL")
                {
                    <span>League of Legends</span>
                }
                else
                {
                    @team.CurrentVideogame.Name
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => team.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => team.Slug)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
        }
    </tbody>
</table>
