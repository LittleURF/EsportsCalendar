@model IEnumerable<Match>

<table class="table table-striped" style="background-color: lightgray;">
    <tr class="bg-dark text-white">
        <th>Game</th>
        <th>Teams</th>
        <th>Begins At</th>
    </tr>
    @foreach (var match in Model)
    {
        <tr>
            <td>@match.Videogame.Name</td>
            <td>@match.Name</td>
            <td>@match.BeginAt.ToString("dd MMMM " + "" + "H:mm", CultureInfo.CreateSpecificCulture("en-US"))</td>

        </tr>
    }
</table>
